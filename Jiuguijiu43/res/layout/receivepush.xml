<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/id_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/topbar_bg" >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dip"
            android:text="@string/app_name"
            android:textColor="#ffffff"
            android:textSize="15.0dip" />

        <Button
            android:id="@+id/back"
            android:layout_width="50dip"
            android:layout_height="30dip"
            android:layout_centerVertical="true"
            android:layout_marginBottom="5dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="3.0dip"
            android:background="@drawable/btn_back_bg"
            android:clickable="true"
            android:gravity="center" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/pushimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_title"
        android:layout_centerHorizontal="true"
        android:padding="20dip" />

    <TextView
        android:id="@+id/pushcontent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pushimage"
        android:layout_centerHorizontal="true"
        android:padding="10dip"
        android:textSize="16dip" />

    <TextView
        android:id="@+id/linkurl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pushcontent"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:padding="10dip"
        android:textColor="@drawable/textcolor_selector" />

</RelativeLayout>