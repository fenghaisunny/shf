<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/slidingmenu"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/cate_menu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="5dip"
            android:background="@drawable/slide_divider" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="5dip"
            android:layout_marginTop="2dip"
            android:background="@drawable/slide_divider" />

        <ImageButton
            android:id="@+id/exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dip"
            android:background="@drawable/exit_pressed" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="5dip"
            android:layout_marginTop="20dip"
            android:background="@drawable/ic_shelf_category_divider" />

        <ImageButton
            android:id="@+id/call_sli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:background="@drawable/call_pressed" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="5dip"
            android:layout_marginTop="20dip"
            android:background="@drawable/ic_shelf_category_divider" />

        <ImageButton
            android:id="@+id/theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:background="@drawable/theme_pressed" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="5dip"
            android:layout_marginTop="20dip"
            android:background="@drawable/ic_shelf_category_divider" />

        <ImageButton
            android:id="@+id/setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:background="@drawable/setting" />
        
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="5dip"
            android:layout_marginTop="20dip"
            android:background="@drawable/slide_divider" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="5dip"
            android:layout_marginTop="20dip"
            android:background="@drawable/ic_shelf_category_divider" />

        <com.baoji.jinlinggongshang.CustomButton
            android:id="@+id/cbAbove"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            Image="@drawable/button_about"
            ImageID="@+id/imageview_about_button"
            Text="@string/button_about"
            TextID="@+id/textview_about_button"
            android:background="@drawable/back_button_default_style"
            android:clickable="true" >
        </com.baoji.jinlinggongshang.CustomButton>
    </LinearLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="5dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/ic_shelf_category_divider" />

</RelativeLayout>